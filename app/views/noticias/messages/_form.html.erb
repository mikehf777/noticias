<%= simple_form_for([:noticias,@message], :defaults => { :input_html => { :class => 'input-xxlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,"Crear Mensaje", :class => "btn-primary" %>
  </div>
<% end %>
