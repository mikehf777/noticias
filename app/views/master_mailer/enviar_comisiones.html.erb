<div class="well" style="min-height: 20px;padding: 19px;margin-bottom: 20px;background-color: #f5f5f5;border: 1px solid #e3e3e3;-webkit-border-radius: 4px;-moz-border-radius: 4px;border-radius: 4px;-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);">
<h1>Comisiones <%= "#{Date.today}" %> </h1>
<h2><%= @user.name %></h2>
</div>
<table class="table table-bordered table-striped" style="width: 100%;margin-bottom: 20px;border: 1px solid #dddddd;border-collapse: separate;*border-collapse: collapse;border-left: 0;-webkit-border-radius: 4px;-moz-border-radius: 4px;border-radius: 4px;">
  <thead>
    <tr>
      <th style="padding: 8px;line-height: 20px;text-align: left;vertical-align: bottom;border-top: 1px solid #dddddd;font-weight: bold;border-left: 1px solid #dddddd;">Titulo</th>
      <th style="padding: 8px;line-height: 20px;text-align: left;vertical-align: bottom;border-top: 1px solid #dddddd;font-weight: bold;border-left: 1px solid #dddddd;">Descripcion</th>
      <th style="padding: 8px;line-height: 20px;text-align: left;vertical-align: bottom;border-top: 1px solid #dddddd;font-weight: bold;border-left: 1px solid #dddddd;">Prioridad</th>
    </tr>
  </thead>

  <tbody>
<% @notifications.each do |notification| %>
    <tr>
      <td style="padding: 8px;line-height: 20px;text-align: left;vertical-align: top;border-top: 1px solid #dddddd;border-left: 1px solid #dddddd;"><%= notification.title %></td>
      <td style="padding: 8px;line-height: 20px;text-align: left;vertical-align: top;border-top: 1px solid #dddddd;border-left: 1px solid #dddddd;"><%= notification.description %></td>
      <td style="padding: 8px;line-height: 20px;text-align: left;vertical-align: top;border-top: 1px solid #dddddd;border-left: 1px solid #dddddd;"><%= notification.piority %></td>
    </tr>
<% end %>
  </tbody>
</table>
